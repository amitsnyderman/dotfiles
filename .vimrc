set nocompatible
filetype off

"set rtp+=~/.vim/bundle/vundle
"call vundle#rc()

"Bundle 'gmarik/vundle'

filetype plugin indent on

syntax on
set encoding=utf-8
set scrolloff=3
set showmode
set showcmd
set visualbell
set ttyfast
set backspace=indent,eol,start
set laststatus=2
set title
set history=1000

set number
set list
set listchars=tab:\|\ 
set autoindent

set ignorecase
set smartcase
set incsearch
set showmatch
set hlsearch

filetype plugin indent on
